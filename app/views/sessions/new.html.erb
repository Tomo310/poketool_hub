<% provide(:title, "Sign in") %>
<h1 class="center">Sign in</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_tag sessions_path do %>
			
			<%= label_tag :name %>
			<%= text_field_tag :name %>

			<%= label_tag :password %>
			<%= password_field_tag :password %>

			<%= submit_tag "Sign in", class: "btn" %>
		<% end %>
	</div>
</div>